generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int    @id @default(autoincrement())
  primeiro_nome  String
  segundo_nome   String
  genero   String
  bilhete  String @unique
  telemovel String @unique
  email String @unique
}

model Pessoa {
    id    Int    @id @default(autoincrement())
    estado_civil  String
    provincia String
    municipio String
    profissao String
    nivel_instrucao String
    data_nascimento Date
    user_id Int
}